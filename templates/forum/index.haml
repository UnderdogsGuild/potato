%div.ud-pagetitle.uk-container.uk-container-center
	%h1.ud-pagetitle
		Forum
%div.ud-mainpage-bg.uk-container.uk-container-center
	=haml :'tmpl/breadcrumbs'
	%div.ud-mainpage
		%div.ud-clearfix
			%a.uk-button.uk-button-primary.uk-float-right{:href => '#'}
				New Thread
		%table.uk-table.uk-table-hover.uk-table-striped
			%thead
				%th.uk-width-6-10
					Thread
				%th.uk-width-2-10
					Last Poster
				%th.uk-width-1-10.uk-hidden-small
					Views
				%th.uk-width-1-10
					Replies
			%tbody
				- if @threads
					- @threads.each do |t|
						%tr.thread{ 'class' => (t.officer ? "officer" : nil) }
							%td
								%a{:href => t.url}
									= t.title
								%span.uk-comment-meta.ud-rpost-meta
									By #{t.author}
							%td
								- last = t.posts.last
								%a{:href => last.author.url}
									%img.ud-avatar-25px{:src => last.author.gravatar_url + '?s=25'}
									= last.author
							%td
								= t.views
							%td.uk-hidden-small
								= t.posts.count - 1
				- else
					%tr.nothreads
						%td{colspan: 4}
							I'm afraid there are no threads for you *sadface*.
		%a.uk-button.uk-button-large.uk-button-primary.uk-width-1-1{:href => '#'}
			Load More
