%div.ud-pagetitle.uk-container.uk-container-center
	%h1.ud-pagetitle
		Forum
%div.ud-mainpage-bg.uk-container.uk-container-center
	=haml :'tmpl/breadcrumbs'
	%div.ud-mainpage
		%table.uk-table.uk-table-hover.uk-table-striped
			%thead
				%th.uk-width-6-10
					Thread
				%th.uk-width-2-10
					Last Poster
				%th.uk-width-1-10.uk-hidden-small
					Views
				%th.uk-width-1-10
					Replies
			- @threads.each do |t|
				%tr
					%td
						%a{:href => t.url}
							= t.title
						%span.uk-comment-meta.ud-rpost-meta
							By #{t.author.login}
					%td
						%a{:href => '#'}
							%img.ud-avatar-25px{:src => t.posts.last.author.gravatar_url}
							= t.posts.last.author.login
					%td
						= t.views
					%td.uk-hidden-small
						= t.posts.count - 1
		%a.uk-button.uk-button-large.uk-button-primary.uk-width-1-1{:href => '#'}
			Load More
